{
    "manifest_version": 3,
    
    "version_name": "1.5 release",
    "version": "1.5",

    "name": "Panzoid+",
    "short_name": "Pz+",
    "description": "Browser extension specifically for the Clipmaker 3. You can add new effects to your project using the power of GLSL language shaders",
    "author": "WzrterFX",

    "icons": {
        "128": "./source/icons/128x128.png",
        "48": "./source/icons/48x48.png",
        "32": "./source/icons/32x32.png",
        "16": "./source/icons/16x16.png"
    },

    "action": {
        "default_popup": "./index.html",
        "default_title": "Show Panzoid+"
    },

    "permissions": [
        "clipboardWrite"
    ]
}